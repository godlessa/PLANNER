<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.main.MainFragment">

    <TextView
        android:id="@+id/tv_tittle_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLANS"
        android:textSize="28sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/bellota_text_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.example.planner.presentation.custom.CustomCalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tittle_plan"></com.example.planner.presentation.custom.CustomCalendarView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graphh">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.planner.presentation.main.MainFragment"
        android:label="main_gragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_eventFragment"
            app:destination="@id/eventFragment" />
        <argument
            android:name="currentEventByIDdb"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <fragment
        android:id="@+id/eventFragment"
        android:name="com.example.planner.presentation.showEvent.EventDetailsFragment"
        android:label="event_gragment"
        tools:layout="@layout/event_details_fragment">
    </fragment>

</navigation>